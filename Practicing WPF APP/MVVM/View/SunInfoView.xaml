<UserControl x:Class="Practicing_WPF_APP.MVVM.View.SunInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Practicing_WPF_APP.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="460" d:DesignWidth="800">
    <StackPanel Background="#272537">
        <TextBlock Text="Sun Info"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"></TextBlock>
        <Button Content="Load Sun Info"
                Height="40"
                Style="{StaticResource ControlButtonTheme}"
                x:Name="LoadSunInfoBtn"
                Click="LoadSunInfoBtn_OnClick"/>
        <TextBlock x:Name="sunriseText"
                   Margin="20"
                   FontSize="20"
                   Foreground="White"
                   FontFamily="/Fonts/#Itim Regular"/>
        <TextBlock x:Name="sunsetText"
                   Margin="20"
                   FontSize="20"
                   Foreground="White"
                   FontFamily="/Fonts/#Itim Regular"/>
    </StackPanel>
</UserControl>
